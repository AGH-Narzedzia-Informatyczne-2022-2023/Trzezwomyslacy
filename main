import pygame
pygame.init()

screen = pygame.display.set_mode([1200, 800])
kolor_tla = (250, 250, 250)
pygame.display.set_caption("Gra Trzeźwomyślący")

running = True
while running:

    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False


    screen.fill(kolor_tla)
    pygame.display.flip()
    pygame.display.update()



pygame.quit()
